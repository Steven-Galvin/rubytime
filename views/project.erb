<h3><%= @project.name %></h3>
<p><%= @project.description %></p>
<form action="/project/<%= @project.id %>" method="patch">
  <label for="project[name]">Project Name</label>
  <input type="text" name="project[name]">
  <label for="project[description]">Project Description</label>
  <input type="text" name="project[description]">
  <button type="submit" class="btn btn-default">Edit Project</button>
</form>
<form action="/project/<%= @project.id %>" method="delete">
  <button type="submit" class="btn btn-default">Delete Project</button>
</form>
